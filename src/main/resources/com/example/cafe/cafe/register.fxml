<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@css/login.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cafe.cafe.regController">
    <children>
        <!-- Поле для логина -->
        <TextField fx:id="usernameField" layoutX="146.0" layoutY="102.0" prefHeight="46.0" prefWidth="297.0" promptText="Логин" />

        <!-- Поле для пароля -->
        <PasswordField fx:id="passwordField" layoutX="146.0" layoutY="154.0" prefHeight="46.0" prefWidth="297.0" promptText="Пароль" />

        <PasswordField fx:id="confirmPasswordField" layoutX="146.0" layoutY="208.0" prefHeight="46.0" prefWidth="297.0" promptText="Повторите пароль" />

        <!-- Кнопка входа -->
        <Button fx:id="login_href" layoutX="146.0" layoutY="318.0" prefHeight="29.0" prefWidth="297.0" styleClass="but" text="Войти">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>

        <!-- Кнопка регистрации -->
        <Button fx:id="registerButton" layoutX="148.0" layoutY="264.0" prefHeight="46.0" prefWidth="297.0" styleClass="but" text="Регистрация">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Button>

    </children>
</AnchorPane>
